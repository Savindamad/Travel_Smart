<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travelsmart.fourloop.travelsmart.SignupSP1"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/InfoRl3"
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LicenceNumEt"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_alignEnd="@+id/VehicleLicenceNumEt"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:hint="Licence Number" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"
            android:id="@+id/LicenceUploadBtn"
            android:layout_alignBottom="@+id/LicenceNumEt"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="177dp"
            android:layout_height="117dp"
            android:id="@+id/LicenceImgIv"
            android:layout_below="@+id/LicenceNumEt"
            android:layout_alignParentStart="true"
            android:background="#ebebeb"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/VehicleLicenceNumEt"
            android:layout_below="@+id/LicenceImgIv"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:hint="Vehicle Licence Number" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/VehicleNumEt"
            android:layout_below="@+id/VehicleLicenceNumEt"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:hint="Vehicle Number"
            android:layout_marginBottom="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VehicleTypeSp"
            android:layout_below="@+id/VehicleNumEt"
            android:spinnerMode="dropdown"
            android:entries="@array/vehicleType"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/NumOfSeatsSp"
            android:layout_below="@+id/VehicleTypeSp"
            android:layout_marginBottom="10dp"
            android:entries="@array/Car"
            />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/DoneBtn4"
        android:layout_alignParentStart="true"
        android:onClick="Done4"
        android:layout_below="@+id/InfoRl3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#0e91c9"
        android:textColor="#ffffff"/>


</RelativeLayout>
